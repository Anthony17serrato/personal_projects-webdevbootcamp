<% include ../partials/header %>
<div class="container">
	<h1 style="text-align: center;">Edit <%= campground.name %></h1>
	<div style="width: 40%; margin: 25px auto;">
	<form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
		<input class="form-control form-group" type="text" value="<%= campground.name %>" name="campground[name]">
		<input class="form-control form-group" type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01">
		<input class="form-control form-group" type="text" value="<%= campground.image %>" name="campground[image]">
		<input class="form-control form-group" type="text" value="<%= campground.description %>" name="campground[description]">
		<button class="btn btn-lg
		btn-primary btn-block">Submit!</button>
	</form>
	<a href="/campgrounds">GO BACK</a>
	</div>
	
</div>
<% include ../partials/footer %>