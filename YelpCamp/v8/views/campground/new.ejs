<% include ../partials/header %>
<div class="container">
	<h1 style="text-align: center;">Create a New Campground</h1>
	<div style="width: 40%; margin: 25px auto;">
	<form action="/campgrounds" method="POST">
		<input class="form-control form-group" type="text" placeholder="name" name="name">
		<input class="form-control form-group" type="number" placeholder="price" name="price" min="0.01" step="0.01">
		<input class="form-control form-group" type="text" placeholder="image url" name="image">
		<input class="form-control form-group" type="text" placeholder="Add a description" name="description">
		<button class="btn btn-lg
		btn-primary btn-block">Submit!</button>
	</form>
	<a href="/campgrounds">GO BACK</a>
	</div>
	
</div>
<% include ../partials/footer %>